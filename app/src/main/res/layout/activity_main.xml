<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/guide1"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/guide2"
        app:layout_constraintGuide_percent="0.9"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrasi"
        android:textSize="24dp"
        android:id="@+id/txt_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide1"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/input_email"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/txt_register"
        android:layout_margin="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_username"
        android:layout_margin="15dp"
        android:hint="Username"
        app:layout_constraintTop_toBottomOf="@id/input_email"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/input_password"
        app:layout_constraintTop_toBottomOf="@id/input_username"
        android:layout_margin="15dp"
        android:hint="Password"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/input_confirm_password"
        app:layout_constraintTop_toBottomOf="@id/input_password"
        android:layout_margin="15dp"
        android:hint="Confirm Password"
        />

    <TextView
        android:id="@+id/txt_birthdate"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/input_confirm_password"
        app:layout_constraintStart_toStartOf="@id/input_confirm_password"
        android:hint="DD/MM/YYYY"
        android:textSize="17dp"
        android:layout_marginVertical="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_date_picker"
        app:layout_constraintTop_toBottomOf="@id/input_confirm_password"
        app:layout_constraintStart_toEndOf="@+id/txt_birthdate"
        android:layout_marginHorizontal="15dp"
        android:text="Select Birth Date"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register"
        android:text="Masuk"
        app:layout_constraintBottom_toTopOf="@+id/guide2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="50dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>